@model IEnumerable<ThingWall.Data.Model.UserFriend>

@{
    ViewBag.Title = "FriendsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>FriendsList</h2>


<table class="table">
    <tr>
        <th>
            Friend
        </th>
        <th>
            Add Item
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.User1 == User.Identity.Name)
                {
                    @Html.DisplayFor(modelItem => item.User2)
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.User1)
                }
            </td>
            <td>
                @Html.ActionLink("Add item for this user", "Create", "Items", new { id = item.UserFriendID }, null)
                @Html.ActionLink("Show this user wall", "CurrentUserItems", "Items", new { id = item.UserFriendID }, null)
            </td>
        </tr>
    }

</table>