@model IEnumerable<ThingWall.Data.Model.User>
@{
    ViewBag.Title = "UsersList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UsersList</h2>
<div class="row">
    @foreach (var user in Model)
    {
        <div class="col-md-10">
            <div class="col-md-5">
                @Html.DisplayFor(ModelUser => user.Nick)
            </div>
            <div class="col-md-2">
                @Html.ActionLink("Add item for this user","Create","Items", new { id = user.Id}, null)
            </div>
        </div>
    }
</div>
